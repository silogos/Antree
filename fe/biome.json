{
  "$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
  "extends": ["../common.json"],
  "files": {
    "includes": ["src/**/*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "cssModules": false,
      "tailwindDirectives": true
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "noLabelWithoutControl": "off"
      }
    }
  }
}
