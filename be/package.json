{
  "name": "@antree/backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env src/scripts/seed.ts",
    "db:seed:queue-items": "tsx --env-file=.env src/scripts/seed-queue-items.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}